
#include <stdio.h>
int main(){
    int n;
    printf("enter the size of array you want ");
    scanf("%d", &n);
    int arr[n];
    printf("enter the elements ");
    for (int i = 0; i < n; i++){
        scanf("%d", &arr[i]);
    }
    printf("entered elemnet ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }
    int start,end,mid,target;
    printf("enter which number want to search ");
    scanf("%d",&target);
    start=arr[0];
    end=arr[n]-1;
    while(start<=end){
         mid=(start+end)/2;
        if(target==mid){
            printf("found");
            break;
        }
        else if(target<mid){
            end=mid-1;
        }
        else if (target>mid){
            start=mid+1;
        }
        else{
        printf("not found");
        }
    }
    return 0;
}
